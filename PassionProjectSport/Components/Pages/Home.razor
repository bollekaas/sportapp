@page "/"
@using PassionProjectSport.Classes
@using PassionProjectSport.Session
@inject Appsession AppSession
@inject NavigationManager Navigation
@if (AppSession.IsLoggedIn())
{
    <header class="welcome-header">
        <h1>Welkom @AppSession.GetUser().Firstname @AppSession.GetUser().Lastname!</h1>
    </header>
    @if (AppSession.IsLoggedIn() && AppSession.GetUser().AccountType == User.AccountTypeEnum.admin)
    {
        <DashboardAdmin/>
    }
    else if (AppSession.IsLoggedIn() && AppSession.GetUser().AccountType == User.AccountTypeEnum.user)
    {
        <DashboardUser/>
    }


}
else
{
    <div class="loading-container">
        <p>Loading...</p>
    </div>
}
